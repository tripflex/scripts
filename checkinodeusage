if [ "$#" -lt 1 ] || [ "$1" = "-h" ] || [ "$1" = "--help" ] || [[ $1 == -* ]]; then
 	echo "Usage: $0 <path>" >&2
 	exit
fi
clear
echo "Checking $1 for iNode usage"
echo "-----------------------------------------------------"
	for d in `find $1 -maxdepth 1 -type d |grep -xv $1 |sort`
	do c=$(find $d |wc -l)
	printf "$c\t\t- $d\n"
	done 
echo "-----------------------------------------------------"	
printf "Total iNodes in ($1): \t\t$(find $1 | wc -l)\n"